mixin nav-content()
	ul
		li: a.active(href="{{site.baseurl}}") Home
		li: a(href="{{site.base.url}}/#work") work
		li: a(href="{{site.base.url}}/#code") code
		li: a(href="{{site.base.url}}/#about") about

.mobile-nav
	+nav-content()

header
	.header-position
		h1.logo Adrian DOrnellas

		nav.site-nav
			+nav-content()
		a(href='mailto:adrian@savagebanana.com').email-link + email me

		.mobile-nav-toggle: span
